{
  "name": "fox-apps",
  "private": true,
  "version": "0.0.0",
  "description": "A collection of apps for the game Foxhole",
  "workspaces": [
    "frontend/*",
    "deployments/*",
    "packages/*"
  ],
  "scripts": {
    "env:cmd": "dotenvx run -f .env.local --",
    "build": "turbo run build --concurrency=1",
    "build:nocache": "turbo run build:nocache --concurrency=1",
    "build:full": "turbo run build --force --concurrency=1",
    "dev": "turbo run dev",
    "serve": "turbo run serve"
  },
  "devDependencies": {
    "@dotenvx/dotenvx": "^0.44.1",
    "@yarnpkg/types": "^4.0.0",
    "turbo": "^2.0.12"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "packageManager": "yarn@4.1.1"
}
