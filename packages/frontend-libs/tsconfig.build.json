{
	"extends": "./tsconfig.json",
	"compilerOptions": {
		"noEmit": false,
		"declaration": true,
		"declarationMap": true,
		"emitDeclarationOnly": true,
		"outDir": "./dist",
		"rootDir": "./src",
		"skipLibCheck": true
	},
	"include": ["src/**/*.ts", "src/**/*.vue", "src/vite-env.d.ts"],
	"exclude": ["node_modules", "src/assets/**/*"]
}
